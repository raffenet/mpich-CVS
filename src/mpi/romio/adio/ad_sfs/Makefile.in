CC          = @CC@
INCLUDE_DIR = -I@MPI_INCLUDE_DIR@ -I../../include -I../include
AR          = @AR@
LIBNAME     = @LIBNAME@
CFLAGS      = @CFLAGS@ $(INCLUDE_DIR)

AD_SFS_OBJECTS = ad_sfs_close.o ad_sfs_read.o ad_sfs_rdcoll.o \
      ad_sfs_wrcoll.o ad_sfs_open.o ad_sfs_write.o ad_sfs_done.o \
      ad_sfs_fcntl.o ad_sfs_iread.o ad_sfs_iwrite.o ad_sfs_wait.o \
      ad_sfs_flush.o ad_sfs_resize.o ad_sfs_seek.o ad_sfs_hints.o

default: $(LIBNAME)

.c.o:
	$(CC) $(CFLAGS) -c $*.c

$(LIBNAME): $(AD_SFS_OBJECTS)
	$(AR) $(LIBNAME) $(AD_SFS_OBJECTS)

clean:
	\rm *.o
