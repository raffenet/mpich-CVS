CC          = @CC@
AR          = @AR@
LIBNAME     = @LIBNAME@
MPI         = @MPI@
srcdir      = @srcdir@
CC_SHL      = @CC_SHL@
SHLIBNAME   = @SHLIBNAME@

INCLUDE_DIR = -I@MPI_INCLUDE_DIR@ -I${srcdir}/../include -I../include -I${srcdir}/../../../../include -I../../../../include -I/homes/jlee/lors-0.82.1/local/include -I/homes/jlee/lors-0.82.1/local/include/lors -I/homes/jlee/lors-0.82.1/local/include/libxml2

LDFLAGS     = -L/homes/jlee/lors-0.82.1/local/lib
LIBS        = -lpthread -llors -lend2end -laes -lmd5 -ldes -lz -lexnode -llbone -lfdr -libp

CFLAGS      = @CPPFLAGS@ @CFLAGS@ $(INCLUDE_DIR) $(LDFLAGS) $(LIBS)

C_COMPILE_SHL = $(CC_SHL) @CFLAGS@ $(INCLUDE_DIR)

@VPATH@

AD_LN_OBJECTS = ad_ln_close.o ad_ln_read.o \
	ad_ln_open.o ad_ln_write.o \
	ad_ln_done.o ad_ln_fcntl.o ad_ln_iread.o \
	ad_ln_iwrite.o ad_ln_wait.o ad_ln_flush.o \
	ad_ln_resize.o ad_ln_delete.o ad_ln_lnio.o ad_ln_hints.o ad_ln.o

default: $(LIBNAME)
	@if [ "@ENABLE_SHLIB@" != "none" ] ; then \
	    $(MAKE) $(SHLIBNAME).la ;\
	fi

.SUFFIXES: $(SUFFIXES) .p .lo

.c.o:
	$(CC) $(CFLAGS) -c $<
.c.lo:
	$(C_COMPILE_SHL) $(INC) -c $<
	@mv -f $*.o $*.lo

$(LIBNAME): $(AD_LN_OBJECTS)
	$(AR) $(LIBNAME) $(AD_LN_OBJECTS)

AD_LN_LOOBJECTS = $(AD_LN_OBJECTS:.o=.lo)

$(SHLIBNAME).la: $(AD_LN_LOOBJECTS)
	$(AR) $(SHLIBNAME).la $(AD_LN_LOOBJECTS)

clean:
	@rm -f *.o *.lo
tags: TAGS
SOURCES = ${AD_LN_OBJECTS:.o=.c}
HEADERS = 
TAGS:${HEADERS} ${SOURCES}
	here=`cd ../../../../.. && pwd` ; cd ${srcdir} && etags -o $$here/TAGS --append ${HEADERS} ${SOURCES}
