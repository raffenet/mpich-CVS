CC          = @CC@
AR          = @AR@
LIBNAME     = @LIBNAME@
srcdir      = @srcdir@
CC_SHL      = @CC_SHL@
SHLIBNAME   = @SHLIBNAME@

INCLUDE_DIR = -I@MPI_INCLUDE_DIR@ -I${srcdir}/../include -I../include
CFLAGS      = @CFLAGS@ $(INCLUDE_DIR)

C_COMPILE_SHL = $(CC_SHL) @CFLAGS@ $(INCLUDE_DIR)

@VPATH@

AD_UFS_OBJECTS = ad_ufs_close.o ad_ufs_read.o \
      ad_ufs_open.o ad_ufs_write.o ad_ufs_done.o \
      ad_ufs_fcntl.o ad_ufs_iread.o ad_ufs_iwrite.o ad_ufs_wait.o \
      ad_ufs_resize.o \
      ad_ufs.o


default: $(LIBNAME)
	@if [ "@ENABLE_SHLIB@" != "none" ] ; then \
	    $(MAKE) $(SHLIBNAME).la ;\
	fi

.SUFFIXES: $(SUFFIXES) .p .lo

.c.o:
	$(CC) $(CFLAGS) -c $<
.c.lo:
	$(C_COMPILE_SHL) -c $<
	@mv -f $*.o $*.lo

$(LIBNAME): $(AD_UFS_OBJECTS)
	$(AR) $(LIBNAME) $(AD_UFS_OBJECTS)

AD_UFS_LOOBJECTS=$(AD_UFS_OBJECTS:.o=.lo)
$(SHLIBNAME).la: $(AD_UFS_LOOBJECTS)
	$(AR) $(SHLIBNAME).la $(AD_UFS_LOOBJECTS)

coverage:
	-@for file in  ${AD_UFS_OBJECTS:.o=.c} ; do \
		gcov -b -f $$file ; done

clean:
	@rm -f *.o *.lo
