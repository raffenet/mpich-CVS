
##### User configurable options #####

MPI_CC      = @MPI_CC@
MPI_CLINKER = $(MPI_CC)
#
MPI_INC     = @MPI_INC@
MPI_LIBS    = @MPI_LIBS@
MPE_CFLAGS  = @MPE_CFLAGS@
MPE_INCDIR  = @includebuild_dir@
MPE_LIBDIR  = @libbuild_dir@
PROF_LIBS   = -L$(MPE_LIBDIR) @PROF_LIBS@ @X_LIB@ $(MPI_LIBS) -lm
#
INCLUDE_DIR = -I$(MPE_INCDIR) $(MPI_INC)
LDFLAGS     = @LDFLAGS@

RM          = rm

### End User configurable options ###

@VPATH@

srcdir      = @srcdir@

.SUFFIXES: .c .@OBJEXT@ @EXEEXT@

.c.@OBJEXT@:
	$(MPI_CC) $(CFLAGS) -c $<

.@OBJEXT@@EXEEXT@:
	$(MPI_CLINKER) $(CC_LDFLAGS) -o $@ $< $(PROF_LIBS)

CFLAGS     = $(MPE_CFLAGS) $(INCLUDE_DIR) @CFLAGS@
CC_LDFLAGS = $(LDFLAGS) $(MPE_CFLAGS) @CFLAGS@
EXECS      = gmm@EXEEXT@ mm@EXEEXT@ vb@EXEEXT@

default: $(EXECS)

gmm.@OBJEXT@:	gmm.c
	$(MPI_CC) $(CFLAGS) -DUSE_GRAPHICS -c $?

mm.@OBJEXT@:	gmm.c
	$(MPI_CC) $(CFLAGS) -c -o mm.@OBJEXT@ $?

vb.@OBJEXT@:	vb.c
	$(MPI_CC) $(CFLAGS) -c $?

clean:
	@-$(RM) -f *.@OBJEXT@ *~ PI* $(EXECS) gmmlog

distclean: clean
	@-$(RM) -f Makefile
