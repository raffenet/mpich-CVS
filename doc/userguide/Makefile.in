ALL: all-redirect
SHELL = @SHELL@
VPATH = @srcdir@
srcdir = @srcdir@
.SUFFIXES: .pdf .dvi .tex

.tex.dvi:
	@if [ ! -s ../mpiman.sty ] ; then \
	(cd .. && ln -s $(srcdir)/../mpiman.sty mpiman.sty) ; fi
	@if [ ! -s code.sty ] ; then \
	ln -s $(srcdir)/../adi3/code.sty code.sty ; fi
	@if [ ! -s user.bib ] ; then \
	 ln -s $(srcdir)/user.bib user.bib ; fi
	-latex $< </dev/null >/dev/null 2>&1
	-bibtex $* </dev/null
	-latex $< </dev/null >/dev/null 2>&1
	latex $<

.dvi.pdf:
	dvipdfm $*
.dvi.ps:
	dvips $*

all-redirect: user.pdf

mandoc:

htmldoc:

latexdoc: ALL

clean:
	-rm -f *.toc *.out *.dvi user.ps user.pdf *.aux *.blg *.bbl

distclean: clean
	-rm -f code.sty
